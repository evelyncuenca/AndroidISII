<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3">

    <TextView
        android:text="Codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:textColor="@color/azure" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="8dp"
        android:id="@+id/editCodigoProducto"
        android:enabled="false"
        android:layout_alignStart="@+id/editDescripcionProducto" />

    <TextView
        android:text="Descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCodigoProducto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView8"
        android:textStyle="normal|bold"
        android:textColor="@color/azure" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editCodigoProducto"
        android:layout_marginTop="7dp"
        android:id="@+id/editDescripcionProducto"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView8"
        android:layout_alignStart="@+id/editPrecioProducto" />

    <TextView
        android:text="Precio Venta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDescripcionProducto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/textView9"
        android:textStyle="normal|bold"
        android:textColor="@color/azure" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/editDescripcionProducto"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginTop="17dp"
        android:id="@+id/editPrecioProducto" />

    <TextView
        android:text="Existencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPrecioProducto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView10"
        android:textStyle="normal|bold"
        android:textColor="@color/azure" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignTop="@+id/textView10"
        android:id="@+id/editExistencia"
        android:layout_alignStart="@+id/editPrecioProducto" />

    <TextView
        android:text="Carga/Edicion de Productos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@color/azure"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editCodigoProducto" />

    <Button
        android:text="Aceptar"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/btnAceptarProducto"
        android:layout_width="150dp"
        style="@android:style/Widget.Button" />

    <Button
        android:text="Cancelar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelarProducto"
        android:layout_alignBaseline="@+id/btnAceptarProducto"
        android:layout_alignBottom="@+id/btnAceptarProducto"
        android:layout_toEndOf="@+id/btnAceptarProducto"
        style="@android:style/Widget.Button" />

</RelativeLayout>
